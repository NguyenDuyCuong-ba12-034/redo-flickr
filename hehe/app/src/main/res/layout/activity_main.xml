<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/btn_add_to_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm vào Album"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_album_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album Public"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_album_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album Private"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_album_everyone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album Mọi Người" />
</LinearLayout>
